<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zzq.sliwushuo.MainActivity">
    <RelativeLayout
        android:id="@+id/guide_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/guide_bottom_diver"
        >
    </RelativeLayout>
    <TextView
        android:id="@+id/guide_bottom_diver"
        android:layout_above="@+id/guide_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/home_bottom_diver"
        />

    <RadioGroup
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/guide_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <RadioButton
            android:textColor="@color/point_select"
            android:textSize="11sp"
            android:checked="true"
            android:drawableTop="@mipmap/ic_tab_home_selected"
            android:button="@null"
            android:id="@+id/guide_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/guide"
            android:gravity="center_horizontal"
            />
        <RadioButton
            android:textColor="@color/default_color"
            android:textSize="11sp"
            android:drawableTop="@mipmap/ic_tab_select_normal"
            android:button="@null"
            android:id="@+id/hot_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hot"
            android:gravity="center_horizontal"
            />
        <RadioButton
            android:textColor="@color/default_color"
            android:textSize="11sp"
            android:drawableTop="@mipmap/ic_tab_category_normal"
            android:button="@null"
            android:id="@+id/classify_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/classify"
            android:gravity="center_horizontal"
            />
        <RadioButton
            android:textColor="@color/default_color"
            android:textSize="11sp"
            android:drawableTop="@mipmap/ic_tab_profile_normal"
            android:button="@null"
            android:id="@+id/mine_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mine"
            android:gravity="center_horizontal"
            />

    </RadioGroup>
</RelativeLayout>

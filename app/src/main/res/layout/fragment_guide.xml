<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.zzq.sliwushuo.guide.view.GuideFragment">

    <RelativeLayout
       android:background="@color/point_select"
        android:id="@+id/guide_default_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/guide_top_left"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="礼物说"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/guide_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/guide_tab_layout">
    </android.support.design.widget.TabLayout>
    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/ad_play"
        app:canLoop="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.bigkoo.convenientbanner.ConvenientBanner>
    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
